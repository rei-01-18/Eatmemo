<head>
 <title>bmi</title>
 <script>
 function bmi() {
   const height = parseFloat(document.getElementById("height").value)
   const weight = parseFloat(document.getElementById("weight").value)
   const bmi = weight/(height+height);
   const userBMI = document.getElementById("bmi_index")
   userBMI.textContent = bmi.toFixed(2);
 };
 </script>

</head>
<body>
  height<input type="text" id="height" ><br><br>
  weight<input type="text" id="weight" ><br><br>
  <button type="botton" onclick="bmi()">
  <h2 class="text-input">BMI=<b id="bmi_index"></b></h2>
</body>